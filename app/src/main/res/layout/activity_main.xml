<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.status.testjackson.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Data Bind"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate JSON" />

        <Button
            android:id="@+id/btnRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read JSON" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tree Model"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGenTree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate JSON (tree)" />

        <Button
            android:id="@+id/btnReadTree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read JSON (tree)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Stream API"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGenStream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate JSON (Stream)" />

        <Button
            android:id="@+id/btnReadStream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read JSON (Stream)" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
